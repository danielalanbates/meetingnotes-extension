{
  "manifest_version": 3,
  "name": "MeetingPad",
  "version": "1.0.0",
  "description": "AI-powered meeting notes with voice-to-text and auto-email. Persistent side panel for Zoom, Teams, Google Meet, and Webex.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "notifications",
    "downloads",
    "contextMenus",
    "sidePanel",
    "tabs",
    "alarms"
  ],
  "host_permissions": [
    "https://meet.google.com/*",
    "https://zoom.us/*",
    "https://*.zoom.us/*",
    "https://teams.microsoft.com/*",
    "https://*.teams.microsoft.com/*",
    "https://webex.com/*",
    "https://*.webex.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://meet.google.com/*",
        "https://zoom.us/*",
        "https://*.zoom.us/*",
        "https://teams.microsoft.com/*",
        "https://*.teams.microsoft.com/*",
        "https://webex.com/*",
        "https://*.webex.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_title": "MeetingPad"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
